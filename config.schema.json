{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SoftEther VPN Client Configuration",
  "description": "Configuration file schema for SoftEtherZig VPN Client",
  "type": "object",
  "properties": {
    "server": {
      "type": "string",
      "description": "VPN server hostname or IP address",
      "examples": ["vpn.example.com", "192.168.1.1"]
    },
    "port": {
      "type": "integer",
      "description": "VPN server port",
      "minimum": 1,
      "maximum": 65535,
      "default": 443
    },
    "hub": {
      "type": "string",
      "description": "Virtual hub name",
      "examples": ["VPN", "OFFICE", "PRODUCTION"]
    },
    "account": {
      "type": "string",
      "description": "Account name (defaults to username if not specified)"
    },
    "username": {
      "type": "string",
      "description": "Username for authentication"
    },
    "password": {
      "type": "string",
      "description": "Plaintext password (NOT RECOMMENDED - use password_hash instead)"
    },
    "password_hash": {
      "type": "string",
      "description": "Pre-hashed password (base64-encoded SHA1). Generate with: vpnclient --gen-hash username password"
    },
    "use_encrypt": {
      "type": "boolean",
      "description": "Enable SSL/TLS encryption",
      "default": true
    },
    "use_compress": {
      "type": "boolean",
      "description": "Enable data compression",
      "default": true
    },
    "max_connection": {
      "type": "integer",
      "description": "Maximum number of connections (0=server policy, 1-32=force specific count)",
      "minimum": 0,
      "maximum": 32,
      "default": 0
    },
    "ip_version": {
      "type": "string",
      "description": "IP version preference",
      "enum": ["auto", "ipv4", "ipv6", "dual"],
      "default": "auto"
    },
    "static_ipv4": {
      "type": ["string", "null"],
      "description": "Static IPv4 address",
      "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
      "examples": ["10.0.0.2", "192.168.1.10"]
    },
    "static_ipv4_netmask": {
      "type": ["string", "null"],
      "description": "Static IPv4 netmask",
      "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
      "examples": ["255.255.255.0", "255.255.0.0"]
    },
    "static_ipv4_gateway": {
      "type": ["string", "null"],
      "description": "Static IPv4 gateway",
      "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
      "examples": ["10.0.0.1", "192.168.1.1"]
    },
    "static_ipv6": {
      "type": ["string", "null"],
      "description": "Static IPv6 address",
      "examples": ["2001:db8::1", "fe80::1"]
    },
    "static_ipv6_prefix": {
      "type": ["integer", "null"],
      "description": "Static IPv6 prefix length",
      "minimum": 1,
      "maximum": 128,
      "examples": [64, 48]
    },
    "static_ipv6_gateway": {
      "type": ["string", "null"],
      "description": "Static IPv6 gateway",
      "examples": ["2001:db8::1", "fe80::1"]
    },
    "dns_servers": {
      "type": ["array", "null"],
      "description": "DNS server addresses",
      "items": {
        "type": "string"
      },
      "examples": [
        ["8.8.8.8", "8.8.4.4"],
        ["2001:4860:4860::8888", "2001:4860:4860::8844"]
      ]
    },
    "reconnect": {
      "type": "boolean",
      "description": "Enable automatic reconnection",
      "default": true
    },
    "max_reconnect_attempts": {
      "type": "integer",
      "description": "Maximum reconnection attempts (0=infinite)",
      "minimum": 0,
      "default": 0
    },
    "min_backoff": {
      "type": "integer",
      "description": "Minimum backoff delay in seconds",
      "minimum": 1,
      "default": 5
    },
    "max_backoff": {
      "type": "integer",
      "description": "Maximum backoff delay in seconds",
      "minimum": 1,
      "default": 300
    },
    "performance": {
      "type": "object",
      "description": "Performance tuning options",
      "properties": {
        "profile": {
          "type": "string",
          "description": "Performance profile: 'latency' for gaming/VoIP (lowest ping), 'balanced' for general use (recommended), 'throughput' for downloads/streaming (highest speed)",
          "enum": ["latency", "balanced", "throughput"],
          "default": "balanced"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [],
  "additionalProperties": true,
  "examples": [
    {
      "server": "vpn.example.com",
      "port": 443,
      "hub": "VPN",
      "username": "myuser",
      "password_hash": "base64-hashed-password-here",
      "use_encrypt": true,
      "use_compress": true,
      "ip_version": "auto"
    },
    {
      "server": "vpn.example.com",
      "hub": "VPN",
      "username": "myuser",
      "password_hash": "hash",
      "ip_version": "dual",
      "static_ipv4": "10.0.0.50",
      "static_ipv4_netmask": "255.255.255.0",
      "static_ipv4_gateway": "10.0.0.1",
      "dns_servers": ["8.8.8.8", "8.8.4.4"]
    }
  ]
}
